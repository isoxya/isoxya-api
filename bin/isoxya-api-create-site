#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "url" http://example.com
url=$ASK_BUF
#-------------------------------------------------------------------------------
j=$(cat <<-EOT
	{
	  "url": "$url"
	}
	EOT
    )
echo "$j" | jqd

s=$(
    curla -X POST -d "$j" "$ENDPOINT_URL/site"
)
echo "$s" | jq
echo "$s" | jq -r '.href' | grep -v 'null' >> "$SITE_HREF_"
reload_vars
#-------------------------------------------------------------------------------
if [ -f .env ]; then
    queue=$(echo -n "$SITE_HREF" | cut -d'/' -f3)
    sed -i "s/^CRAWLER_QUEUE=.*$/CRAWLER_QUEUE=$queue/" .env
fi
#-------------------------------------------------------------------------------
