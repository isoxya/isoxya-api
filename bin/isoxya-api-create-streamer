#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "channels (Pro)" null
channels=$ASK_BUF

ask "tag" nginx
tag=$ASK_BUF

ask "url" http://isoxya-plugin-nginx.localhost
url=$ASK_BUF
#-------------------------------------------------------------------------------
j=$(cat <<-EOT
	{
	  "channels": $channels,
	  "tag": "$tag",
	  "url": "$url"
	}
	EOT
    )
echo "$j" | jqd

p=$(
    curla -X POST -d "$j" "$ENDPOINT_URL/streamer"
)
echo "$p" | jq
echo "$p" | jq -r '.href' | grep -v 'null' >> "$STREAMER_HREF_"
reload_vars
#-------------------------------------------------------------------------------
if [ -f .env ]; then
    queue=$(echo -n "$STREAMER_HREF" | cut -d'/' -f3)
    sed -i "s/^STREAMER_QUEUE=.*$/STREAMER_QUEUE=$queue/" .env
fi
#-------------------------------------------------------------------------------
